<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aeternity.aecan">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AECan"
        android:icon="${appIcon}"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">
        <activity android:name=".views.WebViewActivity"></activity>
        <activity android:name=".views.NewLotDetailActivity" />
        <activity android:name=".views.ForgotPasswordActivity" />
        <activity android:name=".views.base.ToolbarActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MainActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".views.RegisterActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".views.HomeActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".views.NewLotActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".views.WebViewTextActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".views.LoginActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".views.StageDetailActivity"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>